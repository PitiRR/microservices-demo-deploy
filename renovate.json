{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "platform": "github",
  "regexManagers": [
    {
      "fileMatch": ["^helm-chart/values.yaml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?) versioning=(?<versioning>.*?)\\s*\\ntag:\\s*\"(?<currentValue>.*?)\""
      ]
    }
  ]
}
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "platform": "github",
  "regexManagers": [
    {
      "fileMatch": ["^helm-chart/values.yaml$"],
      "matchStrings": [
        "\\s*# renovate: datasource=(?<datasource>[^\\s]+) depName=(?<depName>[^\\s]+) versioning=(?<versioning>[^\\s]+)\\n\\s*tag: \"(?<currentValue>[^\"]+)\""
      ]
    }
  ]
}